<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <label for="inputEmail" class="form-label">Email address</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :id => 'inputEmail' %>
  </div>
  
  <div class="mb-3">
    <label for="inputPassword" class="form-label">Password</label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control', :id => 'inputPassword' %>
  </div>
  
  <div class="mb-3">
    <label for="inputPassword" class="form-label">Confirm password</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control', :id => 'inputPassword' %>
  </div>
  
  
  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

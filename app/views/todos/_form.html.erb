<%= form_with(model: todo, :html => { :style => 'width :70%;', :class => 'position-absolute top-50 start-50 translate-middle' }) do |form| %>
  <br/>
  <% if editing %>
    <h1>Edit Todo</h1>
  <% else %>
    <h1>New Todo</h1>
  <% end %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <label for="inputTitle" class="form-label">Title</label>
    <%= form.text_field :title, :class => 'form-control shadow-sm p-3 mb-5 bg-body rounded', :id => 'inputTitle'%>
  </div>
  <div class="mb-3">
    <label for="inputDescription" class="form-label">Description</label>
    <%= form.text_area :description, :class => 'form-control shadow-sm p-3 mb-5 bg-body rounded', :id => 'inputDescription' %>
  </div>
  <% if editing %>
    <div class="mb-3 form-check">
      <%= form.check_box :completed, :class => 'form-check-input', :id => 'inputCompleted' %>
      <label class="form-check-label" for="exampleCheck1">Completed?</label>
    </div>
  <% end %>
  
  
  <%= form.number_field :user_id, id: :todo_user_id, :class => 'form-control', value: current_user.id, type: :hidden %>
  <div class="mb-3 actions">
    <button class="btn btn-primary w-100" type="submit">Submit</button>
  </div>
<% end %>
